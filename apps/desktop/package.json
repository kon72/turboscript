{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "main": "out/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev:renderer": "next dev --port 3000 renderer",
    "dev:main": "pnpm run build:main && electron .",
    "dev": "concurrently -k \"pnpm run dev:renderer\" \"pnpm run dev:main\"",
    "build:renderer": "next build renderer",
    "build:main": "tsc -p main",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "pack-app": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./main/tsconfig.json"
  },
  "dependencies": {
    "hello-world-node": "workspace:*",
    "next-electron-server": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "concurrently": "^8.2.0",
    "electron": "25.1.1",
    "electron-builder": "^24.4.0",
    "eslint-config-custom": "workspace:*",
    "next": "^13.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.1.3",
    "ui": "workspace:*"
  },
  "build": {
    "asar": true,
    "files": [
      "out"
    ]
  }
}
