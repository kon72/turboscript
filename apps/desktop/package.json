{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "main": "out/main/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev:main": "tsc -p main --watch",
    "dev:renderer": "next dev --port 3000 renderer",
    "dev:app": "cross-env ELECTRONMON_LOGLEVEL=error electronmon .",
    "dev": "concurrently -n \"tsc,next,app\" -c \"blue.bold,cyan.bold,green.bold\" -k \"pnpm run dev:main\" \"pnpm run dev:renderer\" \"pnpm run dev:app\"",
    "build:main": "tsc -p main",
    "build:renderer": "next build renderer",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "pack-app": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder",
    "type-check": "tsc -p renderer && tsc -p main --noEmit"
  },
  "dependencies": {
    "hello-world-node": "workspace:*",
    "next-electron-server": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "25.1.1",
    "electron-builder": "^24.4.0",
    "electronmon": "^2.0.2",
    "eslint-config-custom": "workspace:*",
    "next": "^13.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.1.3",
    "ui": "workspace:*"
  },
  "build": {
    "asar": true,
    "files": [
      "out"
    ]
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "out/main/*"
    ]
  }
}
